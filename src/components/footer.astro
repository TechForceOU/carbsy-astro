---
import Container from "@components/container.astro";
import { Icon } from "astro-icon/components";

const { margin } = Astro.props;

const footermenu = {
  company: [
    {
      title: "About",
      path: "/about",
    },
    {
      title: "Contact",
      path: "/contact",
    },
  ],
  product: [
    {
      title: "Download iOS",
      path: "https://apps.apple.com/us/app/carbsy-ai-carb-tracker/id6745561317",
    },
    {
      title: "Download Android",
      path: "https://play.google.com/store/apps/details?id=com.techforce.carbsy",
    },
  ],
  resources: [
    {
      title: "Help Center",
      path: "/contact",
    },
    {
      title: "Privacy Policy",
      path: "/privacy",
    },
    {
      title: "Terms of Service",
      path: "/terms",
    },
  ],
};
---

<footer
  class:list={[
    "py-14 bg-slate-100 border-t border-slate-100",
    margin && "mt-10",
  ]}
>
  <Container>
    <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
      <div class="sm:col-span-2 md:col-span-3 lg:col-span-2">
        <a href="/" class="text-lg flex items-center"
          ><span class="font-semibold text-brand-accent">Carbsy</span>
        </a>
        <p class="mt-4 text-sm text-slate-700 max-w-xs">
          Estimate carbs in seconds using your voice, camera, or text. The easiest way to track carbs, net carbs, and macros for diabetes and keto diets.
        </p>
        <div class="flex gap-3 mt-4 items-center">
          <!-- <a
            href="https://twitter.com/carbsyapp"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500"
          >
            <Icon name="bx:bxl-twitter" class="w-4 h-4" />
            <span class="sr-only">Twitter or X</span></a
          > -->
          <a
            href="https://apps.apple.com/us/app/carbsy-ai-carb-tracker/id6745561317"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500"
          >
            <Icon name="bx:bxl-apple" class="w-4 h-4" /><span
              class="sr-only">App Store</span
            ></a
          >
          <a
            href="https://play.google.com/store/apps/details?id=com.techforce.carbsy"
            target="_blank"
            rel="noopener noreferrer"
            class="bg-slate-200 hover:bg-slate-300 rounded w-6 h-6 inline-flex items-center justify-center text-slate-500"
          >
            <Icon name="bx:bxl-android" class="w-4 h-4" /><span
              class="sr-only">Google Play</span
            ></a
          >
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">Company</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.company.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-indigo-600"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">Product</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.product.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-indigo-600"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
      <div>
        <h3 class="font-medium text-sm text-slate-800">Resources</h3>
        <div class="flex flex-col mt-3">
          {
            footermenu.resources.map((item) => (
              <a
                href={item.path || "#"}
                class="py-2 text-sm text-slate-600 hover:text-indigo-600"
              >
                {item.title}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </Container>

  <div class="mt-14 pt-8 px-5 border-t border-slate-200">
    <Container>
      <p class="text-center text-sm text-slate-600 [text-wrap:balance]">
        Copyright © {new Date().getFullYear()} Carbsy. All rights reserved.
      </p>
      <p class="text-center text-xs text-slate-600 mt-2">
        <a href="/terms" class="hover:text-indigo-500"> Terms</a> ・ <a
          href="/privacy"
          class="hover:text-indigo-500"
        >
          Privacy</a
        >
      </p>
    </Container>
  </div>
</footer>
