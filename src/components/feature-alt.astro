---
import Badge from "@components/ui/badge.astro";
import { Picture } from "astro:assets";
import FeatureVoice from "../assets/features/feature-voice.png";
import FeatureCamera from "../assets/features/feature-camera.png";
import FeatureDailyCarbs from "../assets/features/feature-daily-carbs.png";
import FeatureDailyMacros from "../assets/features/feature-daily-macros.png";
import { Icon } from "astro-icon/components";
import Link from "@components/ui/link.astro";

const { nomargin } = Astro.props;
---

<div
  class:list={[
    "max-w-4xl mx-auto flex flex-col items-center justify-center",
    !nomargin && "mt-24",
  ]}
>
  <Badge color="brand">AI-POWERED NUTRITION</Badge>
  <h2 class="text-4xl lg:text-5xl font-semibold lg:tracking-tight mt-4 text-center">
    Track Carbs in Seconds, Not Minutes
  </h2>
  <p class="text-lg mt-4 text-slate-600 text-center [text-wrap:pretty]">
    Say goodbye to manual food logging and barcode scanning. Carbsy's AI understands 
    your meals naturally — whether you speak, snap a photo, or type. Get instant carb 
    estimates, net carbs, and complete macro breakdowns for diabetes management, keto, 
    and healthy eating.
  </p>
</div>

<div class="grid md:grid-cols-2 py-10">
  <div class="grid place-items-center">
    <div class="flex gap-4">
      <Picture
        src={FeatureVoice}
        alt="Carbsy AI Voice Recognition"
        formats={["avif", "webp"]}
        loading="lazy"
      />
      <Picture
        src={FeatureCamera}
        alt="Carbsy AI Camera Recognition"
        formats={["avif", "webp"]}
        loading="lazy"
      />
    </div>
  </div>

  <div class="grid place-items-center">
    <div class="max-w-lg">
      <Badge color="brand" class="-ml-px">Natural AI Understanding</Badge>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Just Say What You Ate — AI Does the Rest
      </h3>
      <p class="mt-4 text-slate-600 [text-wrap:balance]">
        No more searching through endless food databases or scanning barcodes. Simply 
        tell Carbsy "grilled salmon with rice and broccoli" and get instant nutrition 
        breakdowns. Our AI understands natural language, photos, and even complex meals.
      </p>

      <ul class="grid mt-6 text-left gap-y-4">
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Voice-to-Nutrition in Seconds</span>
        </li>

        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Photo Recognition & Analysis</span>
        </li>

        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Natural Language Processing</span>
        </li>
      </ul>
      <div class="flex items-center gap-4 mt-6">
        <Link href="https://apps.apple.com/us/app/carbsy-ai-carb-tracker/id6745561317" size="sm" class="inline-flex items-center group gap-px">
          <span>Download on App Store</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform"
          >
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"></path>
          </svg>
        </Link>
        <a
          href="https://play.google.com/store/apps/details?id=com.techforce.carbsy"
          class="text-sm px-2 transition py-1 text-slate-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full"
        >
          Get on Google Play</a
        >
      </div>
    </div>
  </div>
</div>

<div class="grid md:grid-cols-2 py-10">
  <div class="grid place-items-center pb-10 md:pb-0 md:order-2">
    <div class="flex gap-4">
      <Picture
        src={FeatureDailyCarbs}
        alt="Carbsy Daily Carbs Tracking"
        formats={["avif", "webp"]}
        loading="lazy"
      />
      <Picture
        src={FeatureDailyMacros}
        alt="Carbsy Daily Macros Tracking"
        formats={["avif", "webp"]}
        loading="lazy"
      />
    </div>
  </div>

  <div class="grid place-items-center">
    <div class="max-w-lg">
      <Badge color="brand" class="-ml-px">Complete Nutrition Tracking</Badge>
      <h3 class="text-2xl font-medium mt-4 [text-wrap:balance]">
        Helpful for Diabetes, Keto, and Healthy Living
      </h3>
      <p class="mt-4 text-slate-600 [text-wrap:balance]">
        Get total carbs, net carbs, fiber, sugar, protein, fat, and calories — all 
        calculated automatically. Whether you're managing diabetes, following keto, 
        or tracking macros, Carbsy adapts to your lifestyle without slowing you down.
      </p>
      <ul class="grid mt-6 text-left gap-y-4">
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Net Carbs for Keto Diets</span>
        </li>
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Diabetes-Friendly Tracking</span>
        </li>
        <li class="flex items-center gap-3 text-neutral-800">
          <Icon name="ph:check-circle-fill" class="w-5 h-5" />

          <span class="text-sm">Complete Macro Breakdown</span>
        </li>
      </ul>
      <div class="flex items-center gap-4 mt-6">
        <Link href="https://apps.apple.com/us/app/carbsy-ai-carb-tracker/id6745561317" size="sm" class="inline-flex items-center group gap-px">
          <span>Download on App Store</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
            fill="currentColor"
            class="w-4 h-4 mt-px group-hover:translate-x-1 transition-transform"
          >
            <path
              fill-rule="evenodd"
              d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z"
              clip-rule="evenodd"></path>
          </svg>
        </Link>
        <a
          href="https://play.google.com/store/apps/details?id=com.techforce.carbsy"
          class="text-sm px-2 transition py-1 text-slate-600 hover:text-indigo-600 focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-indigo-500 focus-visible:outline-none focus-visible:shadow-outline-indigo rounded-full"
          >Get on Google Play</a
        >
      </div>
    </div>
  </div>
</div>
