---
import { Picture } from "astro:assets";
import heroImage from "../assets/hero-screenshot.png";
import Link from "@components/ui/link.astro";
import Container from "@components/container.astro";
import AppStoreButton from "@components/ui/app-store-button.astro";
import GooglePlayButton from "@components/ui/google-play-button.astro";
---

<div class="overflow-x-clip">
  <Container>
    <main class="grid lg:grid-cols-5 place-items-center relative">
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-brand-accent/30 right-0 top-0"
      >
      </div>
      <div
        class="absolute w-96 h-96 blur-2xl -z-10 bg-gradient-radial from-brand-accent/20 right-56 top-10"
      >
      </div>

      <div class="max-w-sm md:max-w-max lg:col-span-2">
        <h1
          class="text-3xl lg:text-4xl xl:text-6xl font-medium text-brand-accent lg:tracking-tight xl:tracking-tighter [text-wrap:balance] text-center lg:text-start"
        >
          Estimate carbs in seconds with AI
        </h1>
        <p
          class="text-lg mt-4 max-w-lg text-slate-600 [text-wrap:balance] text-center lg:text-start"
        >
          Track carbs, net carbs, and macros effortlessly. Just speak, snap a
          photo, or typeâ€”Carbsy's AI handles the rest. Perfect for diabetes
          management, keto, and healthy eating.
        </p>
        <div
          class="mt-6 flex flex-row justify-center lg:justify-start gap-4"
        >
          <AppStoreButton class="w-40 sm:w-auto" />
          <GooglePlayButton class="w-40 sm:w-auto" />
        </div>
      </div>
      <div class="py-3 lg:col-span-3 lg:-mr-44">
        <Picture
          src={heroImage}
          alt="Carbsy AI carb tracker app interface"
          formats={["avif", "webp"]}
          sizes="(max-width: 1024px) 100vw, 50vw"
          widths={[240, 540, 720, heroImage.width]}
          loading="eager"
          fetchpriority="high"
        />
      </div>
    </main>
  </Container>
</div>
